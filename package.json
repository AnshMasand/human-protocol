{
  "private": true,
  "name": "human-protocol",
  "version": "1.0.0",
  "description": "Human Protocol Monorepo",
  "repository": "https://github.com/humanprotocol/human-protocol",
  "license": "MIT",
  "scripts": {
    "core:test": "yarn workspace @human-protocol/core test",
    "core:lint": "yarn workspace @human-protocol/core lint",
    "subgraph:test": "yarn workspace @human-protocol/subgraph test",
    "subgraph:lint": "yarn workspace @human-protocol/subgraph lint",
    "test": "concurrently npm:core:test npm:subgraph:test",
    "lint": "concurrently npm:core:lint npm:subgraph:lint",
    "prepare": "husky install"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/fortune/**"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.2.1",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "concurrently": "^7.5.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.1.3",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^29.2.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
